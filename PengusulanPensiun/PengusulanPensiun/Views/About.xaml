            <TextBlock HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap" FontWeight="Bold" Text="2018" Foreground="White"></TextBlock>
        </StackPanel>
        <Button Click="Button_Click" Margin="0,12,5,12" Width="75" HorizontalAlignment="Right" FontSize="16" Grid.Column="1" Grid.Row="2" Style="{StaticResource ButtonStyle1}" Content="Close" Height="Auto"></Button>

    </Grid>
