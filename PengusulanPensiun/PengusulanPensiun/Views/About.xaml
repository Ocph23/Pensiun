        <Grid.RowDefinitions>
            <RowDefinition Height="191*"/>
            <RowDefinition Height="354*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0.5"></SolidColorBrush>
        </Grid.Background>
        <StackPanel Grid.Column="0" Margin="30"  Grid.ColumnSpan="2" >
            <TextBlock HorizontalAlignment="Center" Text="APLIKASI PENGAJUAN PERMOHONAN PENSIUN" FontSize="30" FontWeight="Bold" Foreground="#FFFF5050"/>
